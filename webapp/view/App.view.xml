<mvc:View controllerName="project.goods.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <App id="app">
<pages>
            <Page id="_IDGenPage1" title="Suppiler Login">
                <VBox id="_IDGenVBox1" class="sapUiContentPadding" alignItems="Center" justifyContent="Center">
                    <Input id="_IDGenInput1" value="{/username}" placeholder="Username" />
                    <Input id="_IDGenInput2" value="{/password}" placeholder="Password" type="Password" />
                    <Button id="_IDGenButton1" text="Login" press="onLoginPress" />

                    <Link id="_IDGenLink1" text="Forgot Password?" press="onForgotPasswordPress" />
                </VBox>
            </Page>
        </pages>

    </App>
</mvc:View>
